<Layout title="Publications" description="Publications from the Kim Lab at Rosalind Franklin University">

  <section class="page-header">
    <div class="container">
      <h1>Publications</h1>
      <p>Our peer-reviewed research publications</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="pub-links">
        <p>
          <strong>External Links:</strong>
          <a href="https://pubmed.ncbi.nlm.nih.gov/?term=Kim+H+AND+elegans" target="_blank" rel="noopener">PubMed</a> |
          <a href="https://scholar.google.com/citations?user=YOUR_ID" target="_blank" rel="noopener">Google Scholar</a>
        </p>
      </div>

      {publications.length > 0 ? (
        years.map((year) => (
          <div class="year-section">
            <h2>{year}</h2>
            <ul class="pub-list">
              {pubsByYear[Number(year)].map((pub) => (
                <li class:list={['pub-item', { highlight: pub.highlight }]}>
                  <p class="pub-authors">{pub.authors}</p>
                  <p class="pub-title">{pub.title}</p>
                  <p class="pub-journal">
                    <em>{pub.journal}</em>
                    {pub.volume && ` ${pub.volume}`}
                    {pub.pages && `: ${pub.pages}`}
                  </p>
                  <p class="pub-links">
                    {pub.doi && (
                      <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener">DOI</a>
                    )}
                    {pub.pmid && (
                      <a href={`https://pubmed.ncbi.nlm.nih.gov/${pub.pmid}/`} target="_blank" rel="noopener">PubMed</a>
                    )}
                  </p>
                </li>
              ))}
            </ul>
          </div>
        ))
      ) : (
        <div class="placeholder-content">
          <h2>Selected Publications</h2>
          <p class="note">
            Publications will be listed here. To add your publications, edit the
            <code>publications</code> array in <code>src/pages/publications.astro</code>.
          </p>

          <div class="highlight">
            <h3>Publication Format Example:</h3>
            <div class="pub-item example">
              <p class="pub-authors">Kim H, Author B, Author C</p>
              <p class="pub-title">Title of the research paper goes here</p>
              <p class="pub-journal"><em>Journal of Neuroscience</em> 44: 1234-1245</p>
              <p class="pub-links">
                <a href="#">DOI</a>
                <a href="#">PubMed</a>
              </p>
            </div>
          </div>

          <h3>Quick Links</h3>
          <p>
            For a complete list of publications, please visit:
          </p>
          <ul>
            <li>
              <a href="https://pubmed.ncbi.nlm.nih.gov/?term=Kim+Hongkyun+elegans" target="_blank" rel="noopener">
                PubMed Search
              </a>
            </li>
            <li>
              <a href="https://www.rosalindfranklin.edu/academics/faculty/hongkyun-kim/" target="_blank" rel="noopener">
                Faculty Profile at RFU
              </a>
            </li>
          </ul>
        </div>
      )}
    </div>
  </section>

</Layout>

