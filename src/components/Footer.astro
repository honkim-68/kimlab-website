<style>
  .footer {
    background-color: var(--primary-color);
    color: white;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 3rem 1.5rem;
  }

  .footer h3 {
    color: white;
    font-size: 1.1rem;
    margin-bottom: 1rem;
    border-bottom: none;
  }

  .footer p {
    margin-bottom: 0.5rem;
    opacity: 0.9;
    font-size: 0.9rem;
  }

  .footer a {
    color: rgba(255, 255, 255, 0.9);
  }

  .footer a:hover {
    color: white;
  }

  .footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer li {
    margin-bottom: 0.5rem;
  }

  .footer-bottom {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 1rem 0;
    text-align: center;
  }

  .footer-bottom p {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.8;
  }
</style>
